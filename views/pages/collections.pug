extends ../_includes/layout

block variables
    - var template = 'collections'

block content
  .collections
    .collections__wrapper 
      .collections__titles
        each collection, index in collections

          .collections__titles__label=`${home.data.collection} ${Numbers(index)}`
          .collections__titles__title=collection.data.title

      .collections__gallery 
        .collection__gallery__wrapper 
          each collection in collections
            each product in collection.data.products
              a.collections__gallery__link
                figure.collections__gallery__media
                  img.collections__gallery__media__image(alt=product.product.data.image.alt src=product.product.data.image.url)
      
      .collections__content 
          each collection in collections
            article.collection__article
              h2.collection__title=`${collection.data.title} ${home.data.collection}`
              p.collection__description=collection.data.description


